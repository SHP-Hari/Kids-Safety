    <style name="tensesTileNumber" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/homeButtonTileTextDescription</item>
    </style>

    <style name="tileName" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/homeButtonTileTextTitle</item>
    </style>


